template <class T>
void LPTableau<T>::BasisSelect(const Array<T> &rowv, Vector<T> &colv) const
{
  for (int i = this->basis.First(); i <= this->basis.Last(); i++) {
    if (this->basis.Label(i) < 0) {
      colv[i] = (T) 0;
    }
    else {
      colv[i] = rowv[this->basis.Label(i)];
    }
  }
}

template <class T>
void LPTableau<T>::BasisSelect(const Array<T> &unitv,
			   const Array<T> &rowv,
			   Vector<T> &colv ) const
{
  for(int i=this->basis.First(); i<=this->basis.Last(); i++) {
    if(this->basis.Label(i)<0)
      colv[i]= unitv[-this->basis.Label(i)];
    else
      colv[i]= rowv[this->basis.Label(i)];
  }
}

