template <class T>
void LPTableau<T>::SolveDual()
{
  Vector<T> tmpcol1(this->MinRow(),this->MaxRow());
  BasisSelect(unitcost,cost,tmpcol1);
  this->SolveT(tmpcol1,dual);
}

