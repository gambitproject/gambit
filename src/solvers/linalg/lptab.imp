template <class T>
BFS<T> LPTableau<T>::DualBFS() const
{
  BFS<T> cbfs;
  Vector<T> d(this->MinRow(),this->MaxRow());
  DualVector(d);

  for(int i=this->MinRow();i<=this->MaxRow();i++) { 
    if(!this->Member(-i)) {
      cbfs.insert(-i,d[i]);
    }
  }
  // gout << "\ndual: " << d;
  return cbfs;
}

